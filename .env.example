# Environment Configuration Template
# Copy this file to .env and fill in your values

# ==================================================
# EMBEDDING & SEARCH CONFIGURATION
# ==================================================

# OpenAI API Key (required if using OpenAI embeddings)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Provider: 'sentence-transformers' or 'openai'
EMBEDDING_PROVIDER=sentence-transformers

# Embedding Models:
# For sentence-transformers: 'all-MiniLM-L6-v2', 'all-mpnet-base-v2', 'multi-qa-MiniLM-L6-cos-v1'
# For OpenAI: 'text-embedding-3-small', 'text-embedding-3-large', 'text-embedding-ada-002'
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Embedding Configuration
EMBEDDINGS_DEVICE=cpu
EMBEDDINGS_BATCH_SIZE=32
EMBEDDINGS_PATH=data/embeddings
EMBEDDINGS_NORMALIZE=True

# Search Backend: 'faiss', 'annoy', or 'brute'
SEARCH_BACKEND=faiss

# Search Metric: 'cosine', 'euclidean', or 'dot'
SEARCH_METRIC=cosine

# GPU Acceleration (set to 'true' if you have CUDA-enabled GPU)
USE_GPU=false

# Search Configuration
SIMILARITY_THRESHOLD=0.5
MIN_SEARCH_SCORE=0.5
DEFAULT_SEARCH_K=10
TOP_K_RESULTS=10

# Query Expansion
USE_QUERY_EXPANSION=true

# Search Cache
USE_SEARCH_CACHE=true
SEARCH_CACHE_TTL=3600

# ==================================================
# DATABASE CONFIGURATION
# ==================================================

DATABASE_PATH=data/profiles.db
DATABASE_ECHO=False

# ==================================================
# WEB SCRAPING CONFIGURATION
# ==================================================

RATE_LIMIT_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ==================================================
# AI ASSISTANT CONFIGURATION
# ==================================================

LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
CONTEXT_WINDOW_SIZE=5

# ==================================================
# LOGGING CONFIGURATION
# ==================================================

LOG_LEVEL=INFO
LOG_PATH=logs/app.log

# ==================================================
# CACHE CONFIGURATION
# ==================================================

CACHE_DIR=data/cache
CACHE_ENABLED=True
CACHE_TTL=3600

# ==================================================
# UI CONFIGURATION
# ==================================================

STREAMLIT_THEME=light
PAGE_TITLE=Knowledge Management System

